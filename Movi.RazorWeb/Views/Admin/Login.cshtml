
@model Movi.ViewModel.UserLoginViewModel

@{
    Layout = "";
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>派普影视 - 后台管理</title>

    @Styles.Render("~/Styles/admin")

    @Scripts.Render("~/Scripts/modernizr")

</head>
<body class="loginck-page">
    <div id="main">
        <div class="container">
            <div class="row">
                <div class="panel">
                    <div class="panel-menu">
                        <span class="glyphicon glyphicon-lock"></span>
                        &nbsp;系统登录
                    </div>
                    @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl }))
                    {
                        @Html.AntiForgeryToken()
                        
                        <div class="panel-body">
                            <div class="login-avatar">
                                <img src="/Content/Admins/img/login.png" width="150" height="112" alt="avatar" />
                            </div>
                            <div class="form-group login-info">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "用户名...", autocomplete="off" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-link"></span></span>
                                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type = "password", placeholder = "密码..." })

                                </div>
                            </div>
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="login-alert">
                                    <div class="alert alert-warning">
                                        @(Html.ValidationMessage("Global"))
                                    </div>
                                </div>    
                            }
                        </div>
                        <div class="panel-footer">
                            <span class="pull-left" style="padding-top: 7px;">
                                <a href="@Url.Action("Findpwd","Admin")">忘记密码？</a>
                            </span>
                            <div class="form-group margin-bottom-none">
                                <input class="btn btn-success pull-right" type="submit" value="登录" />
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/Scripts/framework")
</body>
</html>
