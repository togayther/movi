@using Movi.Model
@using Webdiyer.WebControls.Mvc
@{
    var pagerOptions = new PagerOptions
    {
        ContainerTagName = "div",
        CssClass = "cus-pagination",
        PageIndexParameterName = "p",
        FirstPageText = "首页",
        PrevPageText = "上一页",
        NextPageText = "下一页",
        LastPageText = "末页",
        ShowPageIndexBox = false
    };
}

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        @{
             @Html.Pager(ViewData["Medias"] as PagedList<Media>, pagerOptions)
        }
    </div>
</div>
